{
  "compilerOptions": {
    "target": "ES2022", // Objetivo de JavaScript
    "module": "commonjs", // Usar CommonJS para la compatibilidad con Node.js
    "lib": ["ES2022"], // Definir las bibliotecas
    "resolveJsonModule": true, // Permitir la importación de archivos JSON
    "declaration": true, // Generar archivos de declaración (.d.ts)
    "declarationMap": true, // Mapa de declaración
    // "emitDeclarationOnly": true, // Emitir solo archivos de declaración
    "sourceMap": true, // Generar mapas de fuente
    "outDir": "./build", // Directorio de salida
    "rootDir": "./src", // Directorio raíz
    "esModuleInterop": true, // Compatibilidad con módulos ES
    "forceConsistentCasingInFileNames": true, // Asegurar que el uso de mayúsculas y minúsculas sea consistente
    "strict": true, // Habilitar todas las comprobaciones estrictas
    "noImplicitAny": false, // Permitir `any` implícito (si lo prefieres)
    "noUnusedParameters": true, // Marcar los parámetros no utilizados
    "noImplicitReturns": true, // Marcar funciones sin valor de retorno
    "noFallthroughCasesInSwitch": true, // Prevenir fallos en los casos de `switch`
    "skipLibCheck": true, // Omitir la verificación de archivos de librería
    "allowSyntheticDefaultImports": true, // Permitir la importación de módulos sin exportación por defecto
    "moduleResolution": "node", // Resolución de módulos estilo Node.js
    "incremental": true // Habilitar la compilación incremental
  },
  "include": ["src/**/*.ts"] // Incluir todos los archivos TypeScript en /src
  // "exclude": ["node_modules", "build"] // Excluir node_modules y la carpeta de compilación
}
